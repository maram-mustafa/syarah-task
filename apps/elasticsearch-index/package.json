{
  "name": "@my/elasticsearch-index",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "db:sync": "npm run build && node dist/scripts/syncDatabase.js",
    "seed:products": "npm run build && node dist/seeders/productSeeder.js",
    "sync:initial": "npm run build && node dist/jobs/initialSync.js",
    "worker:sync": "npm run build && node dist/consumer.js",
    "clean": "rm -rf dist tsconfig.tsbuildinfo .turbo",
    "clean-all": "rm -rf dist tsconfig.tsbuildinfo .turbo node_modules"
  },
  "dependencies": {
    "@my/common": "workspace:*",
    "@my/elasticsearch": "workspace:*",
    "@my/messaging": "workspace:*",
    "@my/sequelize": "workspace:*",
    "@elastic/elasticsearch": "^8.15.0",
    "amqplib": "^0.10.5",
    "inversify": "^6.2.1",
    "ioredis": "^5.5.0",
    "mysql2": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.6",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0"
  }
}